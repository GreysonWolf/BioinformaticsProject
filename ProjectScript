
#This for loop aims to compile all the reference sequences for hsp70gene into a single file
for refseq in hsp70gene*
do
  cat $refseq >> hsp70geneCompile.fasta
done

#This for loop aims to compile all the reference sequences for mcrAgene into a single file
for refseq in mcrAgene*
do
  cat $refseq >> mcrAgeneCompile.fasta
done 

#These compiled files then are aligned by muscle for analysis
muscle -align hsp70geneCompile.fasta -output aligned_hsp70gene.fasta
muscle -align combined_McrA.fasta -output aligned_mcrA.fasta

#This creates a hmm using hmmbuild tool
hmmbuild hsp70geneCompile.hmm aligned_hsp70gene.fasta
hmmbuild mcrAgeneCompile.hmm aligned_mcrAgene.fasta

#This uses hmmsearch with our hmm we created to find the compatibility between the proteome and reference sequence
echo "Proteome , HSP70count , mcrAcount" >FinalOutput.csv
for file in *.fasta
do
  ~/Private/Biocomputing/tools/hmmsearch --tblout hsp70.output ~/Private/Biocomputing/BioinformaticsProjectFA23/ref_sequences/hsp70geneCompile.hmm $file
  ~/Private/Biocomputing/tools/hmmsearch --tblout mcrA.output ~/Private/Biocomputing/BioinformaticsProjectFA23/ref_sequences/mcrAgeneCompile.hmm $file
#count the number of matches for each of the genes. Put the numbers into variables, so we can make an output table
gene1count=$(cat hsp70.output | grep -v '#' | wc -l)
gene2count=$(cat mcrA.output | grep -v '#' | wc -l)
name=$(echo $file | cut -d . -f 1)
#We then take these 3 variables and output them into a final .csv file
echo "$name , $gene1count , $gene2count" >>FinalOutput.csv
done
